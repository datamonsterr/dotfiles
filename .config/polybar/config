[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "     "
format-foreground = ${colors.background}
format-background= ${colors.teal}
label-padding-right = 4
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "     "
format-foreground = ${colors.background}
format-background = ${colors.peach}
label-padding-right = 4
label = %percentage_used%%

[module/date]
type = internal/date
interval = 1
date = 
date-alt = " %A %d/%m/%Y "
time = %H:%M
time-alt = %H:%M:%S
label-padding-right = 4
format-prefix = "      "
format-foreground = ${colors.background}
format-background = ${colors.yellow}
label = %date% %time%

[module/date1]
