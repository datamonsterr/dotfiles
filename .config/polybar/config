[colors]
background = #232634
background-alt = #303446
foreground = #c6d0f5
foreground-alt = #b5bfe2
rosewater = #f2d5cf
flamingo = #eebebe
pink = #f4b8e4
mauve = #ca9ee6
maroon = #ea999c
red = #e78284
peach = #ef9f76
yellow = #e5c890
green=#a6d189
teal = #81c8be


[bar/example]
monitor = ${env:MONITOR:HDMI-A-0}
width = 100%
height = 25
fixed-center = true 
enable-ipc = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = ${colors.peach}
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1
font-0 = fixed:pixelsize=10;1
font-1 = Unifont:fontformat=truetype:size=9:antialias=false,0
font-2 = siji:pixelsize=10;1
font-3 = Font Awesome 6 Free:pixelsize=12;2
font-4 = Font Awesome 6 Free Solid:pixelsize=12;2
font-5 = Font Awesome 6 Brands:pixelsize=12;2
modules-left = i3 xwindow
modules-center = spotify spotify-prev spotify-play-pause spotify-next
modules-right = pulseaudio memory cpu date
tray-position = right
tray-padding = 6
tray-background = ${colors.background-alt}
wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
cursor-click = pointer
cursor-scroll = ns-resize

[bar/example2]
monitor = ${env:MONITOR:HDMI-A-0}
