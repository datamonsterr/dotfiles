# order += "ipv6"
# order += "run_watch DHCP"
# order += "run_watch VPN"

cpu_usage {
format = " ﬙ %usage "
}
load {
format = " load %1min "
# max_threshold = 0.3
}
disk "/" {
# format = " hdd %avail "
format = " ⛁ %avail "
}
disk "/home" {
format = " /home %avail "
}
wireless _first_ {
# format_up = "W: (%quality at %essid) %ip"
format_up = "  "
format_down = " 睊"
}
ethernet _first_ {
# if you use %speed, i3status requires root privileges
format_up = " 直 "
format_down = " 睊"
}
battery 1 {
#	format = "%status %percentage %remaining %emptytime"
	format = " %status %percentage"
	format_down = "No battery"
	last_full_capacity = true
	integer_battery_capacity = true
#	status_chr = ""
	status_chr = "⚡"
	status_bat = ""
#	status_bat = "bat"
#	status_bat = "☉"
#	status_full = ""
	status_full = "☻"
        low_threshold = 15
	threshold_type = time
}
tztime local {
#        format = "%Y-%m-%d %H:%M:%S"
format = " %d-%m-%y   %H:%M "
}

